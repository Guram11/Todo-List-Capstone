@model List<TodoList> 

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Todo List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="TodoList" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New List
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            List Name
        </th>
            <th>
                List Description
            </th>
            <th>
                Number of Tasks
            </th>
            <th>
                Created At
            </th>
             <th>
                Is Shared
            </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.CreatedAt))
        {            
        <tr>
            <td>
             @obj.Title
            </td>
                <td>
                    @obj.Description
                </td>
                <td>
                    @obj.NumberOfTasks
                </td>
                <td>
                    @obj.CreatedAt
                </td>
                        <td>
                            @if (obj.SharedTo == User?.Identity?.Name)
                            {
                               <span>
                                   Shared With Me
                               </span> 
                            }
                            else
                            {
                                <span>
                                    
                                </span>
                            }
                        </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-route-id=@obj.Id asp-controller="TodoList" asp-action="Edit">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a class="btn btn-danger mx-2" asp-route-id=@obj.Id asp-controller="TodoList" asp-action="Delete">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                    </div>
                </td>
        </tr>
        }
    </tbody>
</table>
</div>
</div>